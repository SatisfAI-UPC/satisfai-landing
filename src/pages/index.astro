---
import Layout from '../layouts/Layout.astro';
import Hero from "../components/Hero.astro";
import AppFeatures from "../components/AppFeatures.astro";
import AboutTeam from "../components/AboutTeam.astro";
import Footer from "../components/Footer.astro";
import Reviews from "../components/Reviews.astro";
import CompanyCarrousel from "../components/CompanyCarrousel.astro";
import CompanyCallToAction from "../components/CompanyCallToAction.astro";
import Pricing from "../components/Pricing.astro";
import CustomerCallToAction from "../components/CustomerCallToAction.astro";
---

<Layout title="SatisfAI">
	<nav class="bg-cream flex justify-around items-center p-2 md:p-4">
		<a href="#">
			<div class="flex gap-4 items-center">
				<img class="h-6 md:h-8  sm:h-4" src="/satisfai-logo-main.svg" alt="CitySOS Logo"/>
				<h1 class="text-3xl font-bold text-black">SatisfAI</h1>
			</div>
		</a>
		<div class="grid justify-center">
			<a href="#" target="_blank">
				<div class="flex items-center justify-center md:justify-start w-full">
					<button id="button" class="text-xl inline-flex items-center justify-center gap-2 px-8 py-4 bg-secondary text-white font-medium rounded-lg transition duration-300 ease-in-out transform hover:scale-105">
						Log in
					</button>
				</div>
			</a>
		</div>
	</nav>
	<main class="grid gap-4 md:gap-8">
		<Hero id="#top-page" />
		<CompanyCarrousel />
		<AppFeatures id="features" />
		<Reviews id="reviews" />
		<CompanyCallToAction id="company" />
		<Pricing id="pricing" />
		<CustomerCallToAction id="customer" />
		<AboutTeam id="about" />
		<Footer />
	</main>
</Layout>
