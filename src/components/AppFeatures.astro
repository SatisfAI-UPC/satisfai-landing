<section id="features">
    <div class="bg-cream">
        <div class="container mx-auto">
        </div>
    </div>

    <div class="container mx-auto py-8">
        <div class="grid md:grid-cols-2 gap-4 md:gap-12">
            <div>
                <div class="flex flex-col gap-6 md:gap-12 p-4 md:p-12 text-center md:text-left items-center md:items-start">
                    <h1 class="text-3xl md:text-5xl font-extrabold">
                        SatisfAI: AI-Powered Survey Creator
                    </h1>
                    <p class="text-medium text-lg md:text-2xl">
                        <span class="text-primary font-bold">SatisfAI</span>
                        simplifies survey creation using AI. Instantly generate tailored surveys,
                        analyze responses in real-time, and gain actionable insights to boost customer
                        satisfaction with minimal effort.
                    </p>
                </div>
                <div class="px-4 md:px-12 flex items-center justify-center md:justify-start">
                    <button id="button" class="w-1/2 md:w-1/3 inline-flex items-center justify-center gap-2 px-4 py-2 bg-secondary text-white font-medium rounded-lg transition duration-300 ease-in-out transform hover:scale-105">
                        Learn more
                        <ion-icon name="play-circle-outline" class="text-4xl"></ion-icon>
                    </button>
                </div>
            </div>
            <div class="flex flex-col gap-8 p-4">
                <div class="group shadow drop-shadow-2xl rounded-2xl hover:bg-tertiary hover:translate-x-2 duration-200">
                    <div class="flex p-8 gap-8">
                        <ion-icon name="document-text" class="text-tertiary group-hover:text-white text-8xl"></ion-icon>
                        <div class="flex flex-col gap-4 group-hover:text-white">
                            <h3 class="text-xl md:text-2xl font-bold uppercase">Personalized Surveys Powered by AI</h3>
                            <p class="text-lg md:text-xl text-grey group-hover:text-white">
                                Automatically generate surveys tailored to your business goals,
                                or create them manuallyâ€”quick and easy with AI assistance.
                            </p>
                        </div>
                    </div>
                </div>
                <div class="group shadow drop-shadow-2xl rounded-2xl hover:bg-tertiary hover:translate-x-2 duration-200">
                    <div class="flex p-8 gap-8">
                        <ion-icon name="eye" class="text-tertiary group-hover:text-white text-8xl"></ion-icon>
                        <div class="flex flex-col gap-4 group-hover:text-white">
                            <h3 class="text-xl md:text-2xl font-bold uppercase">Instant Insights & Analytics</h3>
                            <p class="text-lg md:text-xl text-grey group-hover:text-white">
                                Get real-time data and AI-generated insights to understand customer feedback and identify improvement areas.
                            </p>
                        </div>
                    </div>
                </div>
                <div class="group shadow drop-shadow-2xl rounded-2xl hover:bg-tertiary hover:translate-x-2 duration-200">
                    <div class="flex p-8 gap-8">
                        <ion-icon name="share-social" class="text-tertiary group-hover:text-white text-8xl"></ion-icon>
                        <div class="flex flex-col gap-4 group-hover:text-white">
                            <h3 class="text-lg md:text-2xl font-bold uppercase">Effortless Survey Sharing</h3>
                            <p class="text-lg md:text-xl text-grey group-hover:text-white">
                                Share surveys easily with links or QR codes, making it simple for customers to respond from any device.
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div id="defaultModal" tabindex="-1" aria-hidden="true" class="fixed top-0 left-0 right-0 z-50 hidden w-full p-4 overflow-x-hidden overflow-y-auto md:inset-0 h-[calc(100%-1rem)] max-h-full">
        <div class="relative w-full md:w-2/3">
            <div class="relative bg-white rounded-lg shadow dark:bg-gray-700">
                <div class="flex items-start justify-between p-4 border-b rounded-t dark:border-gray-600">
                    <h3 class="text-xl font-semibold text-gray-900 dark:text-white">
                        About the product
                    </h3>
                    <button type="button" class="text-gray-400 bg-transparent hover:bg-gray-200 hover:text-gray-900 rounded-lg text-sm p-1.5 ml-auto inline-flex items-center dark:hover:bg-gray-600 dark:hover:text-white" data-modal-hide="defaultModal">
                        <svg aria-hidden="true" class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd"></path></svg>
                        <span class="sr-only">Close modal</span>
                    </button>
                </div>
                <div>
                    <iframe class="w-full h-96 md:h-[560px]"
                            src="https://www.youtube.com/embed/ScMzIvxBSi4?si=zpJ5ohdOsvmKjRNK"
                            title="YouTube video player" frameborder="0"
                            allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share"
                            referrerpolicy="strict-origin-when-cross-origin" allowfullscreen>
                    </iframe>
                </div>
            </div>
        </div>
    </div>
</section>

<script>
    import { Modal } from 'flowbite'

    const $buttonElement: HTMLElement | null = document.querySelector('#button');
    const $modalElement: HTMLElement | null = document.querySelector('#defaultModal');

    const modal = new Modal($modalElement);

    if ($buttonElement) {
        $buttonElement.addEventListener('click', () => modal.toggle());
    }
</script>